<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TextView
        android:id="@+id/text_view_message"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:text="@string/app_name"
        android:layout_marginBottom="20dp" />

    <!-- Button to start a ride  -->
    <Button
        android:id="@+id/start_ride_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_ride"
        app:backgroundTint="@color/purple_350"
        app:cornerRadius="100dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        app:icon="@drawable/baseline_play_arrow_24"
        android:layout_marginBottom="10dp" />

    <!-- Button to update a ride  -->
    <Button
        android:id="@+id/update_ride_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_ride"
        app:backgroundTint="@color/purple_350"
        app:cornerRadius="100dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        app:icon="@drawable/baseline_edit_24" />

    <ListView
        android:id="@+id/rides_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>